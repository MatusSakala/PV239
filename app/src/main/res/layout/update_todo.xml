<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ToDoInfoFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/todo_name"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/todo_name_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:fontFamily="sans-serif-light"
            android:inputType="textAutoComplete"
            android:background="@drawable/todo_description_bg"
            android:layout_margin="15dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/todo_description"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>


        <EditText
            android:id="@+id/todo_description_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:minLines="3"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/todo_description_bg"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/todo_category"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/todo_description_bg"
            android:layout_gravity="center"
            >
            <CheckBox
                android:id="@+id/category_none"
                android:buttonTint="@color/categoryNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="None"/>
            <CheckBox
                android:id="@+id/category_personal"
                android:buttonTint="@color/categoryPersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="Personal"/>
            <CheckBox
                android:id="@+id/category_work"
                android:buttonTint="@color/categoryWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="Work"/>
            <CheckBox
                android:id="@+id/category_travel"
                android:buttonTint="@color/categoryTravel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="Travel"/>
            <CheckBox
                android:id="@+id/category_other"
                android:buttonTint="@color/categoryOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="Other"/>
        </LinearLayout>

        <TextView
            android:id="@+id/todo_importance"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Importance"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>


        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:pointerIcon="grab"
            android:max="10"
            android:theme="@style/MySeekBarTheme"
            />

        <Button
            android:id="@+id/add_todo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="UPDATE"
            android:layout_margin="10dp"
            android:textColor="@android:color/background_dark" />


    </LinearLayout>

    <ImageView
        android:id="@+id/button_done"
        android:src="@drawable/done"
        android:background="@color/doneIconBackground"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_export"/>

    <ImageView
        android:id="@+id/button_export"
        android:src="@drawable/export_event"
        android:background="@color/exportEventIconBackground"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_done"
        app:layout_constraintEnd_toStartOf="@id/button_back"/>

    <ImageView
        android:id="@+id/button_back"
        android:src="@drawable/back"
        android:background="@color/backIconBackground"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_export"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>