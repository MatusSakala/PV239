<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundPrimary"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:weightSum="5"
        android:background="@drawable/todo_list_item_background"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4">
            <TextView
                android:id="@+id/todo_date_added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textSecondary"
                android:paddingStart="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:weightSum="100">
                <TextView
                    android:id="@+id/todo_name"
                    android:layout_weight="70"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="25dp"
                    android:gravity="left"
                    android:textColor="@color/textPrimary"
                    android:singleLine="true"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:id="@+id/todo_category_dot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/dot" />
                <TextView
                    android:id="@+id/todo_category_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:textColor="@color/textPrimary"
                    android:textSize="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/todo_importance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/stars_eight"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"/>
    </LinearLayout>

</RelativeLayout>