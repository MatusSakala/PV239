<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/buttonBackgroundPrimaryDark"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Sort by..."
        android:textColor="@color/white"
        android:textSize="25dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/sort_importance"
        android:id="@+id/sort_group"
        android:layout_marginBottom="15dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/sort_importance"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Sort by importance" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/sort_category"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Sort by category" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/sort_date_added"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Sort by date added" />
    </RadioGroup>
</LinearLayout>
